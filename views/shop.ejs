<%- include('./partials/header') %>
<div class="w-full h-fit flex py-5 px-24">
    <div class="navbar w-1/3">
        <div class="">
            <label for="product" class="mr-3 font-semibold"> Sort by: </label>
            <select name="product" id="product" class="border-2">
                <option value="newest">Newest</option>
                <option value="popular">Popular</option>
            </select>

            <div class="mt-20 flex flex-col gap-4">
                <a href="">New Collection</a>
                <a href="">All Products</a>
                <a href="">Discounted Products</a>
            </div>
            <div class="mt-52 flex flex-col gap-4">
                <span>Filter by:</span>
                <span>Availability</span>
                <span>Dicount</span>
            </div>
        </div>
    </div>
    <div class="products w-full flex flex-wrap gap-3">
        <% products.forEach((product)=>{ %>
        <div class="item w-[190px] rounded-lg h-[336px]">
            <div class="img-product bg-yellow-400 size-[190px]">
                <img class="w-full h-full object-cover"
                src="data:image/jpeg;base64, <%=
                product.image.toString("base64") %>" alt="" />
            </div>
            <div
                class="bottom bg-white h-[calc(336px-190px)] p-3 text-[#ee4d2d] text-lg"
            >
                <p class="product-name"><%= product.name %></p>
                <span class="inline-block price mt-3">
                    <i class="fa-solid fa-dollar-sign"></i>
                    <%= product.price %>
                </span>
                <span class="text-xs bg-orange-200 px-1"
                    ><i class="fa-solid fa-dollar-sign"></i>-<%=
                    product.discount %></span
                >
                <button
                    class="h-9 w-full block ml-auto text-white bg-orange-300 hover:bg-[#ee4d2d] mt-5 "
                >
                    <span class=""><i class="fa-solid fa-cart-shopping"></i></i></span>
                </button>
            </div>
        </div>
        <% }) %>
    </div>
</div>
